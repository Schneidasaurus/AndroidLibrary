<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context="com.metadata.androidlibrary.MainActivity">

    <TextView
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:text="Library"
        android:textColor="#FFFFFF"
        android:background="#0000FF"
        android:paddingLeft="15dp"
        android:paddingTop="15dp"
        android:textSize="25dp"
        android:textStyle="bold"/>

    <ImageView
        android:id="@+id/account_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="15dp"
        android:layout_marginRight="20dp"
        app:srcCompat="@mipmap/account"
        />

    <ImageView
        android:id="@+id/home_icon"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="15dp"
        android:layout_marginRight="80dp"
        app:srcCompat="@mipmap/home"
        />

    <TextView
    android:layout_width="match_parent"
    android:layout_height="30dp"
    android:layout_marginTop="62dp"
    android:background="#0000FF"/>

    <ListView
        android:id="@+id/display"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:textSize="14dp"
        android:dividerHeight="2dp"
        android:divider="#0000FF"
        />


    <Button
        android:id="@+id/internal_button"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_marginTop="62dp"
        android:background="#0000FF"
        android:text="Local Library"
        android:textColor="#FFFFFF"
        android:textSize="16dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/external_button"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="152dp"
        android:text="Remote Library"
        android:textStyle="bold"
        android:textSize="16dp"
        android:background="#0000FF"
        android:textColor="#FFFFFF"
        android:layout_marginTop="62dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:background="#0000FF"
        android:text="Library CopyRight@ 2017"
        android:textStyle="bold"
        android:textSize="18dp"
        android:textColor="#FFFFFF"
        android:textAlignment="center"
        android:paddingTop="5dp"
        />

</RelativeLayout>
